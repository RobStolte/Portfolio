{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "allowJs": true,
    "types": [
      "astro/client",
      "vite/client"
    ],
    "plugins": [{"name": "@astrojs/ts-plugin"},],
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@content/*": ["./src/content/*"],
      "@scripts/*": ["./src/scripts/*"],
      "@assets/*": ["./src/assets/*"],
      "@src/*": ["./src/*"],
    },
    "strictNullChecks": true,
    "jsx": "preserve"
  }
}