{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "allowJs": true,
    "types": ["astro/client"],
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@content/*": ["./src/content/*"],
      "@scripts/*": ["./src/scripts/*"],
      "@assets/*": ["./src/assets/*"],
    },
    "strictNullChecks": true
  }
}
