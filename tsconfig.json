{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "allowJs": true,
    "types": [
      "astro/client",
      "vite/client",
      "jest"
    ],
    "verbatimModuleSyntax": true,
    "baseUrl": "R:/_ROB/portfolio",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@content/*": [
        "./src/content/*"
      ],
      "@scripts/*": [
        "./src/scripts/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@src/*": [
        "./src/*"
      ],
    },
    "strictNullChecks": true,
    "jsx": "preserve"
  }
}