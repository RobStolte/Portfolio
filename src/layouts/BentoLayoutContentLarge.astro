---
// Import the necessary components
import BentoBox from '@/components/BentoBox.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';

const boxes = [
  {
    columnWidth: 1,
    rowHeight: 1,
    title: "Title",
  },
  {
    columnWidth: 3,
    rowHeight: 4,
    title: "Content01",
  },
  {
    columnWidth: 1,
    rowHeight: 3,
    title: "SideBar",
  }

]
---

<BaseLayout>
        {boxes.map((box) => (
          <BentoBox title={box.title} columnWidth={box.columnWidth} rowHeight={box.rowHeight}/>)
        )}
</BaseLayout>
