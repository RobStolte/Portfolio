---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HorizontalCard from "@/components/HorizontalCard.astro";

const { page, collection } = Astro.props;

---

<BaseLayout title={collection} sideBarActiveItemID={collection}>
  <div class="mb-5">
    <div class="text-5xl w-full font-bold">{collection}</div>
  </div>

  {
    page.data.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">Sorry!</p>
        <p>Er zijn nog geen {collection} gepost</p>
      </div>
    ) : (
      <ul>
        {page.data.map((post) => (
          <>
            <HorizontalCard
              title={post.data.title}
              img={post.data.heroImage}
              desc={post.data.description}
              url={collection+"/"+post.slug}
              target="_self"
              badge={post.data.badge}
            />
            <div class="divider my-0" />
          </>
        ))}
      </ul>
    )
  }

<div class="flex justify-between">
  {
    page.url.prev ? (
      <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
        {" "}<i class="fas fa-chevron-left" title="Vorige pagina"/>{" "}Vorige pagina
      </a>
    ) : (
      <div />
    )
  }
  {
    page.url.next ? (
      <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
        Volgende pagina{" "}<i class="fas fa-chevron-right" title="Volgende pagina"/>
      </a>
    ) : (
      <div />
    )
  }
</div>
</BaseLayout>
