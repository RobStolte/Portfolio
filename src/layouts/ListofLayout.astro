---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HorizontalCard from "@/components/HorizontalCard.astro";

const { page, collection } = Astro.props;

---

<BaseLayout title={collection} sideBarActiveItemID={collection}>
  <div class="mb-5">
    <div class="text-5xl w-full font-bold">{collection}</div>
  </div>

  {
    page.length === 0 ? (
      <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
        <p class="font-bold">Sorry!</p>
        <p>Er zijn nog geen {collection} gepost</p>
      </div>
    ) : (
      <ul>
        {page.map((post) => (
          <>
            <HorizontalCard
              title={post.title}
              badge={post.badge}
              tags={post.tags}
              img={post.image.filename}
              imageAlt={post.image.alt}
              desc={post.description}
              url={post.slug}
              target="_self"
              badge={post.badge}
            />
            <div class="divider my-0" />
          </>
        ))}
      </ul>
    )
  }

</BaseLayout>
