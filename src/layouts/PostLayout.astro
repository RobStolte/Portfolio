---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets"
import BadgeComponent from "@/components/vue/badge.vue"
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";

export interface Props extends postSchema {}
const { title, description, pubDate, updatedDate, heroImage, heroImageAlt, badge, tags} = Astro.props;
dayjs.extend(localizedFormat);
const postDate = dayjs(pubDate).format("ll");
const editDate = dayjs(updatedDate).format("ll");
---

<BaseLayout title={title} description={description} image={heroImage}>
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
        <Image
            width   = {750}
            height  = {422}
            src     = {heroImage+"/m/0x1024/filters:format(webp)"}
            alt     = {heroImageAlt || "Hero Image"}
            class   = "mb-6 rounded-2xl shadow-[#0f0e0e] border border-base-300 shadow-[0px_0px_15px_0px]"
          />
      <h1 class="title my-2 text-4xl font-bold">{title}</h1>
      {pubDate && <time>{postDate}</time><br />}
      {badge &&<BadgeComponent client:idle text={badge} v-if={badge} classes="my-2" /><br/>}
      {updatedDate && (<div class="text-sm">{" "}Laatst Geupdated: <time>{editDate}</time>{" "}</div><br/>)}
      {tags && tags.map((tag: string) => <BadgeComponent client:idle text={tag} classes="my-1 mr-2" outline="true" />) }
      <div class="divider my-2"></div>
      <slot />
    </article>
  </main>
</BaseLayout>