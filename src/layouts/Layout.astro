---
import BaseHead from '@/components/BaseHead.astro';
import { PERSOONLIJKE_INFO, SITE_TITLE, SITE_DESCRIPTION } from "@/config.ts";
import MainMenu from "@/components/navigation/MainMenu.astro";
import DarkMode from "../scripts/DarkMode.astro";
const today = new Date();

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
const headImage = "https://a.storyblok.com/f/253533/3249x4150/2bc61f68c9/wapen-stolte-groot.png/m/0x100";
---



<!DOCTYPE html>
<html lang="en">
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image={headImage} />
		<body>
		<DarkMode/>
		<main class="card__main_viewport">
			<slot/>
		<MainMenu/>
		</main>
		<p class:list="subNote__website">©️ | {today.getFullYear()} {PERSOONLIJKE_INFO.Voornaam} {PERSOONLIJKE_INFO.Achternaam}</p>
	</body>
</html>
<style>
	.card__main_viewport {
		display 			: flex;
		flex-direction  	: column;
		justify-content 	: space-between;
		align-items 		: flex-start;
		position    		: relative;
		box-shadow 			: var(--shadowstyle__base);
		height 				: 100vh;
		width 				: 100vw;
	}
	
	.subNote__website {
		height: 50px;
	}
	
	@media (min-width: 480px) {
		.card__main_viewport {
			padding 		: 1rem;
			margin 			: 1rem;
			border-radius 	: 2rem;
		}
	}


	@media (min-width: 657px) { /* responsive breakpoint for `lg` */
		.card__main_viewport {
			padding 	  	: 2rem;
			margin 		  	: 2.5rem 3rem;
			width 			: 640px;
			height 			: calc(100vh - 150px);
		}
	}
</style>