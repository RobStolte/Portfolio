---
import BadgeComponent from "../components/badge.vue"
const { title, img, desc, url, badge, tags, target = url || "_blank" } = Astro.props;

---

<div class="md:w-1/3 w-full">
  <a href={url} target={target}>
    <div class="card bg-base-100 transition ease-in-out hover:shadow-xl mx-6 my-2 hover:scale-[102%]">
      <img
        width={750}
        height={500}
        src={img}
        alt={title}
      />
      <div class="card-body">
        <h2 class="card-title">
          {title}
          {badge &&<BadgeComponent client:idle text={badge} v-if={badge} class="my-1" />}
        </h2>
        <p>{desc}</p>
        <div class="card-actions justify-end">
          {tags && tags.map((tag) => <div class="badge badge-outline">{tag}</div>)}
        </div>
      </div>
    </div>
  </a>
</div>
