---
import { Image } from "astro:assets";
import { getRezAndAspectFromStoryAssetFilename } from "../../scripts/storyBlokUtil";
const {
    imgURL,
    imageWidth,
    imageHeight,
    imageAlt,
    title,
    classnames,
    noImageProcessing,

} = Astro.props;
const staticImageWidth = 300
const imageData = getRezAndAspectFromStoryAssetFilename(imgURL)
const newHeight = imageData.aspectRatio * staticImageWidth;

const image = noImageProcessing ? `${imgURL}` : `${imgURL}/m/0x${imageWidth}/filters:quality(80):format(webp)`;
---
<Image
    src={image}
    width={imageWidth || 500}
    height={imageHeight || 300}
    alt={imageAlt || title}
    class={classnames}/>