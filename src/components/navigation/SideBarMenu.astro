---
import { SIDE_BAR_MENU } from '@/config.ts';
const { sideBarActiveItemID, menu = SIDE_BAR_MENU } = Astro.props;
const activeClass = 'bg-base-300';
const isActive = (id: string) => id === sideBarActiveItemID ? activeClass : '';
const capitalizeFirstLetter = (string: string) => string.charAt(0).toUpperCase() + string.slice(1);
---

<ul class='menu grow shrink menu-md overflow-y-auto'>
  {menu.map((item: { id: string; slug: string; icon: string; }) => (
    <li>
      <a class={isActive(item.id) + ' py-3 text-base'} id={item.id} href={'/' + item.slug} data-astro-prefetch="viewport">
        <i class={item.icon}></i> | {capitalizeFirstLetter(item.id)}</a>
    </li>
  ))}
</ul>