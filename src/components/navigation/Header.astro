---
import { PERSOONLIJKE_INFO } from "@/config.ts";

const path = Astro.url.pathname;
const pathParts = path.split('/').filter(part => part);
---

<div
  class="sticky lg:hidden top-0 z-30 flex h-16 w-full justify-center bg-rst__primary text-rst__accent transition-all duration-100"
>
  <div class="navbar">
    <div class="navbar-start">
      <label for="my-drawer" class="btn btn-square btn-ghost">
        <i class="fas fa-bars size-5"></i>
      </label>
    </div>
    <div class="navbar-center">
      <a class="btn btn-ghost normal-case text-Xl" href="/">{PERSOONLIJKE_INFO.Voornaam} {PERSOONLIJKE_INFO.Achternaam}</a>
      {pathParts.length > 0 && ' / '}
      {pathParts.map((part, index) => (
        <span>
          <a class="btn btn-ghost normal-case text-Xl" href={`/${pathParts.slice(0, index + 1).join('/')}`}>{part.replace(/-/g, ' ')}</a>
          {index < pathParts.length - 1 && ' / '}
        </span>
      ))}
    </div>
    <div class="navbar-end"></div>
  </div>
