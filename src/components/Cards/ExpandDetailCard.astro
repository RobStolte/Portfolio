---
const {title,description,icon_url,icon_size,className} = Astro.props;
// noinspection ES6UnusedImports
import {Image} from "astro:assets";
---
<div class:list={["expanded__detail_card", className]}>
    <Image 
            class="icon"
            src={icon_url}
            alt={title}
            width={icon_size}
            height={icon_size}    
    />
    <div class="content">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</div>
<style>
    .expanded__detail_card {
        width: 15rem;
        height: 6rem;
        background-color: var(--background__base);
        border: 10px solid var(--background__base);
        border-radius: 1rem;
        transition: 0.5s;
    }
    .expanded__detail_card:hover {
        box-shadow: var(--shadowstyle__base-in);
        height: 100%;
    }
    .icon {
        width: 5rem;
        height: 5rem;
        margin: 1rem auto; /* Make the top and bottom margin auto */
        padding: 0.3rem;
        border-radius: 50%;
        box-shadow: var(--shadowstyle__base);
    }
    .content {
        display: flex; /* Make the content a flex container */
        flex-direction: column; /* Make the content to stack vertically */
        justify-content: center; /* Center the items vertically */
        background-color: var(--background__base);
        padding: 1rem;
        margin: 0.2rem 1rem 0.2rem 1rem;
        border-radius: 1rem;
        box-shadow: var(--shadowstyle__base);
        transform: translateY(-90px) scale(0);
    }
    .expanded__detail_card:hover .content {
        transform: translateY(0) scale(1);
        max-height: 1000px; /* some sufficiently large value */
    }
</style>