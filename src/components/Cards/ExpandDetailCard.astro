---
const {title, description, icon_url, icon_size, className} = Astro.props;
// noinspection ES6UnusedImports,TypeScriptCheckImport
import {Image} from "astro:assets";
---
<div class:list={["expanded__detail_card", className]}>
    <Image
        class="icon"
        src={icon_url}
        alt={title}
        width={icon_size}
        height={icon_size}
    />
    <div class="content">
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
</div>
<style>
    .expanded__detail_card {
        width            : 15rem;
        background-color : var(--background__base);
        border           : 10px solid var(--background__base);
        border-radius    : 1rem;
        transition       : 0.5s;
        grid-row         : span 2; /*Will make this item 2 rows tall */
    }

    .expanded__detail_card:hover {
        box-shadow : var(--shadowstyle__base-in);
    }

    .icon {
        width         : 5rem;
        height        : 5rem;
        margin        : 1rem auto;
        padding       : 0.3rem;
        border-radius : 50%;
        box-shadow    : var(--shadowstyle__base);
    }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: var(--background__base);
        padding: 1rem;
        margin: 0.5rem 1rem 0.2rem 1rem;
        border-radius: 1rem;
        box-shadow: var(--shadowstyle__base);
        overflow: hidden;
        max-height: 1000px;
        opacity: 0;
        visibility: hidden;
        transition: visibility 0.5s, opacity 0.5s linear, box-shadow 0.5s ease-out;
        position: sticky;
        top: 0;
    }

    .expanded__detail_card:hover .content {
        opacity: 1;
        visibility: visible;
        box-shadow: var(--shadowstyle__base); /* Update with your active shadow style */
    }
</style>