---
import {Props} from "astro"; 
const { className } = Astro.props as Props;
const ClassName = ["card",className]
---

<div class:list={ClassName}>
    <slot/>
</div>
<style>
    .card {
        margin-top: 1rem;
        margin-bottom: 2rem;
        padding: 1rem;
        border-radius: 30px;
        box-shadow: var(--shadowstyle__base-in)
    }
</style>