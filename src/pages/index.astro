---
import Layout from "@/layouts/Layout.astro";
import MainCard from "@/components/MainCard.astro";
import MediumPost from "@/components/MediumPost";
import MainContainer from "@/components/MainContainer.astro";
import ContainerScroll from "@/components/ContainerScroll.astro";
import TextSlide from "@/components/TextSlide.astro";
---

<Layout title="Welcome to Astro Neumorphism template">
	<MainCard />

	<div class="block overflow-auto lg:hidden 2xl:block no-scrollbar">
		<ContainerScroll>
			<MediumPost client:visible />
		</ContainerScroll>
	</div>

	<div class="hidden lg:flex 2xl:hidden">
		<MainContainer>
			<TextSlide />
		</MainContainer>
	</div>
</Layout>
