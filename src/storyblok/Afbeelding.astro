---
import { storyblokEditable } from '@storyblok/astro'
import { Image } from "astro:assets"
 const { blok } = Astro.props
---
 <div
   {...storyblokEditable(blok)}
 >
 <Image
    width   = {blok.maxSize}
    height  = {blok.maxSize}
    src     = {blok.imageAsset.filename + `/m/0x${blok.maxSize}/filters:format(webp)`}
    alt     = {blok.imageAsset.alt || "Hero Image"}
    class   = "rounded-2xl shadow-[#0f0e0e] border border-base-300 shadow-[0px_0px_15px_0px]"
/>
 </div>